	<left>45</left>
	<top>90</top>
	<width>350</width>
	<height>670</height>
	<onup>3030</onup>
	<ondown>3010</ondown>	
	<onleft>3110</onleft>
	<onright>80</onright>
	<orientation>vertical</orientation>
	<preloaditems>4</preloaditems>
	<pagecontrol>80</pagecontrol>
	<itemlayout condition="String.IsEqual(Window.Property(palettename),basic)" height="42.1" width="42.1">
	<control type="image">
	<width>41</width>
	<height>41</height>
	<texture>$INFO[ListItem.Icon]</texture>
	</control>
	</itemlayout>
	<focusedlayout condition="String.IsEqual(Window.Property(palettename),basic)" height="42.1" width="42.1">
	<control type="image">
	<left>2</left>
	<width>41</width>
	<height>41</height>
	<texture>$INFO[ListItem.Icon]</texture>
	<bordertexture border="-2">darkgrey.png</bordertexture>
	<animation effect="zoom" center="auto" start="100" end="200" time="200" easing="inout" tween="sine">Focus</animation>
	</control>
	</focusedlayout>
	<itemlayout condition="!String.IsEqual(Window.Property(palettename),basic)" height="84.2" width="84.2">
	<control type="image">
	<width>82</width>
	<height>82</height>
	<texture>$INFO[ListItem.Icon]</texture>
	</control>
	</itemlayout>
	<focusedlayout condition="!String.IsEqual(Window.Property(palettename),basic)" height="84.2" width="84.2">
	<control type="image">
	<left>2</left>
	<width>82</width>
	<height>82</height>
	<texture>$INFO[ListItem.Icon]</texture>
	<bordertexture border="-2">darkgrey.png</bordertexture>
	<animation effect="zoom" center="auto" start="100" end="200" time="200" easing="inout" tween="sine">Focus</animation>
	</control>
	</focusedlayout>
	</control>

