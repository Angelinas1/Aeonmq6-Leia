<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- Aeon MQ 6 -->
	<defaultcontrol always="true">3110</defaultcontrol>
	<onload>Skin.SetBool(colorpicker)</onload>
	<onunload>Skin.Reset(colorpicker)</onunload>
	<controls>
