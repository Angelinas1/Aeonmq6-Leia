                <left>795</left>
                <top>195</top>
                <height>45</height>
                <width>825</width>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_30</font>
                <label>$VAR[value_playertitle]</label>
                <textcolor>$VAR[value_headercolor]</textcolor>
